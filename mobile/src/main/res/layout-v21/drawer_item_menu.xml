<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:clickable="true"
    android:foreground="@drawable/base_ripple"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_item_height">

    <ImageView
        android:layout_width="56dp"
        android:layout_height="match_parent"
        android:id="@+id/image"
        android:layout_marginStart="@dimen/keyline_first_line"
        android:layout_marginLeft="@dimen/keyline_first_line"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:scaleType="fitStart"
        android:gravity="center_vertical|start|left" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/text"
        android:layout_marginLeft="@dimen/keyline_sec_left_space"
        android:layout_marginStart="@dimen/keyline_sec_left_space"
        android:layout_marginRight="@dimen/keyline_first_line"
        android:layout_marginEnd="@dimen/keyline_first_line"
        android:gravity="center_vertical"
        android:textSize="@dimen/abc_text_size_menu_material" />

</FrameLayout>