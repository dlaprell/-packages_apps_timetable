<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:contentPaddingTop="16dp"
    app:contentPaddingBottom="16dp"
    app:contentPaddingLeft="@dimen/keyline_1_minus_8dp"
    app:contentPaddingRight="@dimen/keyline_1_minus_8dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:textColor="@color/accent"
        android:id="@+id/num"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        tools:text="1" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="2"
        android:layout_marginLeft="@dimen/keyline_2_minus_keyline_1"
        android:layout_marginStart="@dimen/keyline_2_minus_keyline_1">

        <TextView
            android:layout_width="180dp"
            android:layout_height="32dp"
            android:gravity="center_vertical"
            android:layout_columnSpan="2"
            android:layout_column="0"
            android:layout_row="0"
            android:id="@+id/text_type"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            tools:text="EVA" />

        <TextView
            android:layout_height="32dp"
            android:gravity="center_vertical|end"
            android:layout_gravity="fill_horizontal"
            android:layout_column="2"
            android:layout_row="0"
            android:id="@+id/course_number_text"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            tools:text="FR G3" />

        <TextView
            android:layout_width="56dp"
            android:layout_height="24dp"
            android:id="@+id/teacher_orig"
            android:gravity="center_vertical"
            android:layout_column="0"
            android:layout_row="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/grey_600"
            tools:text="Lau" />

        <TextView
            android:layout_width="56dp"
            android:layout_height="24dp"
            android:id="@+id/teacher_new"
            android:gravity="center_vertical"
            android:layout_column="1"
            android:layout_row="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            tools:text="Lau" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:id="@+id/place"
            android:gravity="center_vertical|end"
            android:layout_gravity="fill_horizontal"
            android:layout_column="2"
            android:layout_row="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            tools:text="1206" />

    </GridLayout>

</android.support.v7.widget.CardView>