<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="72dp"
    android:layout_marginLeft="@dimen/keyline_left_space"
    android:layout_marginRight="@dimen/keyline_left_space"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:id="@+id/image"
        android:src="@drawable/ic_event_grey600_48dp" />

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:id="@+id/remove"
        android:src="@drawable/ic_clear_grey600_36dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/image"
        android:layout_toEndOf="@id/image"
        android:layout_toLeftOf="@id/remove"
        android:layout_toStartOf="@id/remove"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="24dp"
        android:id="@+id/container" />

</RelativeLayout>