<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/keyline_left_space"
    android:layout_marginStart="@dimen/keyline_left_space"
    android:layout_marginRight="@dimen/keyline_left_space"
    android:layout_marginEnd="@dimen/keyline_left_space"
    android:columnCount="3"
    android:rowCount="4">

    <TextView
        android:layout_width="48dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/accent"
        android:text="1"
        android:gravity="center"
        android:layout_column="0"
        android:layout_row="0" />

    <TextView
        android:layout_width="48dp"
        android:textSize="24sp"
        android:text="7:45\n8:53"
        android:layout_column="0"
        android:layout_row="1" />

    <TextView
        android:id="@+id/text"
        android:layout_column="1"
        android:layout_row="2"
        android:text="Sport"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/room"
        android:layout_gravity="end|right"
        android:layout_width="120dp"
        android:layout_marginBottom="8dp"
        android:layout_column="2"
        android:layout_row="2"
        android:text="Raum 2301"
        android:textSize="18sp"/>

    <FrameLayout
        android:layout_gravity="fill"
        android:layout_height="120dp"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_row="0"
        android:layout_rowSpan="2">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:src="@drawable/running_grey"
            android:scaleType="centerCrop" />

    </FrameLayout>

</GridLayout>