<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCCCCC">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tablet_scroll"
        android:background="@drawable/scrim_vertical"
        android:layout_marginLeft="@dimen/timegrid_side_margins"
        android:layout_marginRight="@dimen/timegrid_side_margins">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:id="@+id/time_container">

            <include layout="@layout/activity_add_item_add" />

        </LinearLayout>

    </ScrollView>

    <include
        layout="@layout/single_circular_progress_animation" />

</FrameLayout>